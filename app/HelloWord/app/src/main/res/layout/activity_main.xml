<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="#3300FF00"
        android:id="@+id/wtTextView"/>
    <ImageView
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/wtButton2"
        android:background="#3300FF00"
        android:id="@+id/wtImageVIew"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="button1"
        android:layout_below="@id/wtTextView"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="#383838"
        android:background="#38b7ea"
        android:id="@+id/wtButton1"/>
    <Button
        android:layout_below="@+id/wtButton1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="button2"
        android:textSize="13sp"
        android:textColor="#383838"
        android:background="#38b7ea"
        android:id="@+id/wtButton2"/>
    <Button
        android:layout_below="@+id/wtImageVIew"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="button3"
        android:textSize="13sp"
        android:textColor="#383838"
        android:background="#38b7ea"
        android:id="@+id/wtButton3"/>

</RelativeLayout>
