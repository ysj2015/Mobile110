<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

   
		<LinearLayout
		    android:layout_marginTop="10dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
        	android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/white">
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginLeft="10dp"            
	            android:drawableLeft="@drawable/depict_icon"
	            android:text="报警描述"
	            android:textColor="@color/gray"
	            android:textSize="20sp" />
	        <ImageView 
	            android:layout_width="120dp"
	            android:layout_height="2dp"
	            android:background="@drawable/blue_bar"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@drawable/detail_line"/>
			<EditText 
			    android:id="@+id/alarm_text"
			    android:textColor="@color/black"
			    android:gravity="top|left"
			    android:layout_width="match_parent"
			    android:layout_height="100dp"
		        android:textCursorDrawable="@null"
			    android:background="@null"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_marginTop="10dp"
		    android:paddingLeft="10dp"
	        android:paddingRight="10dp"
        	android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/white">
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginTop="10dp"
	            android:drawableLeft="@drawable/picture_icon"
	            android:text="报警图片"
	            android:textColor="@color/gray"
	            android:textSize="20sp" />
	        <ImageView 
	            android:layout_width="120dp"
	            android:layout_height="2dp"
	            android:background="@drawable/blue_bar"/>
	        <ImageView 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@drawable/detail_line"/>	        
	        <ImageView 
		        android:id="@+id/take_photo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/photo_button"/>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img0"/>
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img1"/>
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img2"/>
	        </LinearLayout>	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img3"/>
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img4"/>
	            <ImageView
	                android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:scaleType="center"
		            android:layout_weight="1"
		            android:id="@+id/img5"/>
	        </LinearLayout>
	        <TextView
	            android:id="@+id/tv_no_photo"  
		        android:layout_marginTop="5dp"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:visibility="gone"
	            android:text="无图片"
	            android:textSize="14sp" />
		</LinearLayout>
		<LinearLayout 
		    android:layout_gravity="bottom"
		    android:padding="10dp"
        	android:orientation="vertical"
		    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
		    android:background="@color/white">
		    <ImageView 
		        android:id="@+id/submit"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/submit_button_normal"/>
		</LinearLayout>
    </LinearLayout>
	

</ScrollView>