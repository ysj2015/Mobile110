<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle"
            >

            <!-- android:shape="" 表示是圆角矩形还是椭圆等等 -->
            <solid android:color="#00a0e9"/>
            <!-- 背景颜色 -->


            <!-- padding 表示内部空间距离背景图片内部边距 的距离 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <!-- 图片边框属性（线条） -->
            <stroke
                android:width="2px"
                android:color="@android:color/transparent"/>

            <!-- 圆角的程度 -->
            <corners android:radius="5dp"/>


            <gradient
                android:angle="90"
                android:centerColor="#00a0e9"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#00a0e9"
                android:startColor="#00a0e9"
                android:type="linear"/>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">

            <!-- android:shape="" 表示是圆角矩形还是椭圆等等 -->
            <solid android:color="#0288d1"/>
            <!-- 背景颜色 -->


            <!-- padding 表示内部空间距离背景图片内部边距 的距离 -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>

            <!-- 图片边框属性（线条） -->
            <stroke
                android:width="2px"
                android:color="@android:color/transparent"/>

            <!-- 圆角的程度 -->
            <corners android:radius="5dp"/>


            <gradient
                android:angle="90"
                android:centerColor="#0288d1"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#0288d1"
                android:startColor="#0288d1"
                android:type="linear"/>

        </shape>
    </item>
</selector><!-- From: file:/D:/SafeCity/SafeCity/SafeCity/src/main/res/drawable/w_btn_blue.xml -->