<!--         android:scaleType="fitCenter" -->
<!--         android:src="@drawable/play" /> -->

    <Button
        android:id="@+id/btn_ask_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone" />

</RelativeLayout>